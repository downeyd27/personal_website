</div>
<!-- TODO: Refactor so the h1 tag is within the section. -->

<div class="projectsHeader">
  <h1>Projects</h1>
</div>
<div class="projectSection">
  <% @projects.each do |project| %>
    <section>
      <h2><%= project.name %></h2>

      <figure id="<%= project.name %>" class=" projectSection__figure">
        <%= link_to project.url, class:"projectSection__Link" do %>
          <%= image_tag(project.avatar.url(:medium),
          width: "300",
          height: "300",
          alt: "#{project.description}",
          class: " projectSection__image") %>
        <% end %>
        <figcaption class="projectSection__figcaption">
          <ul>
            <li><span>Description:</span><%= project.description %></li>
            <li><span>Purpose:</span><%= project.purpose %></li>
            <li><span>Technology:</span><%= project.technology %></li>
            <li><span>Project Url:</span>
              <%= link_to project.url do %>
                <%= project.url %>
              <% end %>
            </li>
          </ul>
        </figcaption>
      </figure>
    </section>
  <% end %>
</div>
