<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta content='IE=edge' http-equiv='X-UA-Compatible'>
  <%= display_meta_tags %>
  <%= csrf_meta_tags %>
  <!-- <meta http-equiv="refresh" content="30"> -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Droid+Sans", "http://fonts.googleapis.com/css?family=Droid+Serif" %>
  <%= render 'favicon' %>

  <%= render 'layouts/shim' %>
</head>

<body>
  <h1 class="sr-only">Dillon Downey's Website</h1>
  <a href="#mainSection" class="sr-only">Skip to main content</a>
  <a href="#projectsHeader" class="sr-only">Skip to projects section</a>
  <a href="#footerSection" class="sr-only">Skip to footer</a>
  <!-- ################################# -->
  <!-- ###########  NAVBAR ############# -->
  <%= render 'layouts/navbar_top' %>
  <!-- ###########  NAVBAR ############## -->
  <!-- ################################## -->
  <%= render "layouts/flash_message" %>
  <main id="mainSection" role="main">
    <!-- ################################# -->
    <!-- ############# YIELD ############# -->
    <%= yield %>
    <!-- ############# YIELD ############# -->
    <!-- ################################# -->

    <!-- ################################# -->
    <!-- ###########DEBUG PARAMS########## -->
    <%# debug(params) if Rails.env.development? %>
    <!-- ###########DEBUG PARAMS########## -->
    <!-- ################################# -->
  </main>

  <!-- ################################# -->
  <!-- ############ FOOTER ############# -->
  <%= render 'layouts/footer.html' %>
  <!-- ############ FOOTER ############# -->
  <!-- ################################# -->

  <!-- At bottom of page so page will load faster -->
  <%= javascript_include_tag 'application', "https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js", 'data-turbolinks-track' => true %>
</body>
</html>
