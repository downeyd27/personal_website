<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- TODO: Figure out why old favicon will not change -->
  <%= favicon_link_tag 'favicon.ico' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>

<body>
  <a href="#main-section" class="sr-only">Skip to main content</a>
  <a href="#projects-section" class="sr-only">Skip to projects section</a>
  <!-- ################################# -->
  <!-- ###########  NAVBAR ############# -->
  <%= render 'partials/navbar_top' %>
  <!-- ###########  NAVBAR ############## -->
  <!-- ################################## -->
  <main id="main-content">
    <h1 class="sr-only">Dillon Downey's Web Portfolio</h1>
    <!-- ################################# -->
    <!-- ############# YIELD ############# -->
    <%= yield %>
    <!-- ############# YIELD ############# -->
    <!-- ################################# -->
  </main>

  <!-- ################################# -->
  <!-- ############ FOOTER ############# -->
  <%= render 'partials/footer.html' %>
  <!-- ############ FOOTER ############# -->
  <!-- ################################# -->

  <!-- At bottom of page so page will load faster -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js" defer> </script>
</body>
</html>
